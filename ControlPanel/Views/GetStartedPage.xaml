<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlPanel.Views.GetStartedPage"
             xmlns:views="clr-namespace:ControlPanel.Views"
             xmlns:viewModels="clr-namespace:ControlPanel.MVVM.ViewModels"
             Title="GetStartedPage">

    <Grid RowDefinitions="Auto, Auto, *">
        <Grid Grid.Row="0" ColumnDefinitions="*, *">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" VerticalOptions="Center">
            </StackLayout>
            <Label Text="{Binding CurrentDateTime}" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="1"></Label>
        </Grid>

        <Label Text="Devices" HorizontalOptions="Center" VerticalOptions="Start" Grid.Row="1"></Label>
        <CollectionView Grid.Row="2" ItemsSource="{Binding Devices}"></CollectionView>
        <ContentPresenter Content="{Binding DeviceListPageContent}"></ContentPresenter>
    </Grid>

</ContentPage>