<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ControlPanel.Views.DeviceListPage"
             xmlns:view="clr-namespace:ControlPanel.Views"
             xmlns:viewModels="clr-namespace:ControlPanel.MVVM.ViewModels"
             x:DataType="viewModels:DeviceListViewModel"
             Title="DeviceListPage"
             Shell.NavBarIsVisible="False">



    <Grid RowDefinitions="auto, *" Padding="10" VerticalOptions="Start">
        <Button Grid.Row="0" Command="{Binding GoBackCommand}" Text="&#xf00d;" Style="{StaticResource NavigationButton}" HorizontalOptions="End" VerticalOptions="Start"></Button>

        <VerticalStackLayout Grid.Row="1" VerticalOptions="Start">
            <Label Text="All Devices"/>
        </VerticalStackLayout>
    
    </Grid>
</ContentPage>