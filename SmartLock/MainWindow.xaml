<Window x:Class="SmartLock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartLock"
        mc:Ignorable="d"
        Title="Smart Lock" Height="250" Width="200">
    <Grid>
        <fa:ImageAwesome Icon="Lock" Foreground="Black" Width="50" Height="50"/>
        <Button Content="Toggle Lock" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,180,0,0" Click="ToggleLockButton_Click"></Button>
    </Grid>
</Window>
