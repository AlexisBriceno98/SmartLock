<Window x:Class="SmartLock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartLock"
        mc:Ignorable="d"
        Title="Smart Lock" Height="300" Width="250">

    <Grid Background="#d8ae5e">
        <TextBlock x:Name="LockIcon" Text="&#xf023;" FontFamily="{StaticResource FontAwesome-Solid}" Foreground="black" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="100"/>
        <Button Content="Toggle Lock" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,200,0,0" Click="ToggleLockButton_Click"/>
        <TextBlock x:Name="DeviceStatusTextBlock" Text="Lock Status: Locked" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,197,0,0"/>
    </Grid>

    <Window.Resources>
        <Storyboard x:Key="UnlockColorChangeStoryBoard">
            <ColorAnimation Storyboard.TargetName="LockIcon" Storyboard.TargetProperty="Foreground.Color" To="#f7efdf" Duration="0:0:0.5"/>
        </Storyboard>

        <Storyboard x:Key="LockColorChangeStoryBoard">
            <ColorAnimation Storyboard.TargetName="LockIcon" Storyboard.TargetProperty="Foreground.Color" To="Black" Duration="0:0:0.5"/>
        </Storyboard>
    </Window.Resources>


</Window>
